html
  head
    title="Formulario"
    link( href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
  body
    .container.bg-light.p-4.my-2.mx-auto
      h1.text-primary.mb-5 Ingrese producto
      form(action='/productos' method='post')
        .mb-3
          label.form-label.fw-semibold.fst-italic(for='title') Nombre:
          input.form-control(type='text' name='title')
        .mb-3
          label.form-label.fw-semibold.fst-italic(for='price') Precio:
          input.form-control(type='text' name='price')
        .mb-3
          label.form-label.fw-semibold.fst-italic(for='thumbnail') Foto URL:
          input.form-control(type='text' name='thumbnail')
        button.btn.btn-success.mt-4(type='submit') Enviar
      a.btn.btn-primary(href='/productos' role='button') Ver Productos
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')

