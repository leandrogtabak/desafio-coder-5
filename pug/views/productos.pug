html
  head
    title="Productos"
    link( href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
    style.
      .thumbnail{ height: 48px; }
  body
    .container.bg-light.p-4.my-2.mx-auto
      h1.text-primary.mb-5 Vista de productos
      if productos.length
        h1.text-primary.mb-5 Vista de productos
        table.table
          thead
            tr.table-dark
              th(scope='col') Nombre
              th(scope='col') Precio
              th(scope='col') Foto
          tbody
          each val in productos
            tr.table-dark.align-middle
              td= `${val.title}`
              td= `${val.price}`
              td 
                img.thumbnail(src=`${val.thumbnail}` alt='')
      else
        div.p-3.bg-white.mb-4
          h2.text-danger No se encontraron productos 
      a.btn.btn-primary(href='/' role='button') Volver al formulario